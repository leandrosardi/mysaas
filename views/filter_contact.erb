<!-- HERE IS HOW TO CATCH POST/GET PARAMETERS -->
<% 
name = params[:name]
email = params[:email]
location = params[:location]
industry = params[:industry]
keywords = params[:keywords]

# 
n = NotificationContact.new()
n.id = guid()
n.create_time = now()
n.id_user = nil
n.name_to = name.to_s
n.email_to = "#{email.to_s}, #{HELPDESK_EMAIL.to_s}"
n.contact_name = name.to_s
n.contact_email = email.to_s
n.location = location.to_s
n.industry = industry.to_s
n.keywords = keywords.to_s
n.name_from = NOTIFICATIONS_SMTP_SENDER_NAME
n.email_from = NOTIFICATIONS_SMTP_SENDER_EMAIL
n.send() # el metodo SEND se encarga tambien de guardar el objeto
%>
